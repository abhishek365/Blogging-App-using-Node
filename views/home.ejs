<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Listing</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
      }

      .container {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
      }

      .card {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 20px;
        width: calc(33.33% - 20px); /* Adjust as needed for responsiveness */
      }

      .card h2 {
        margin-top: 0;
      }

      .card p {
        margin-top: 10px;
        color: #555;
      }

      .card img {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 10px;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container">
      <!-- Example cards -->
      <% if (locals.blogs) { %> <% blogs.forEach(blog => { %>
      <div class="card">
        <img src="<%= blog.coverImageUrl %>" alt="Cover Image" />
        <h2><%= blog.title %></h2>
        <p><%= blog.body %></p>
        <a href="blog/<%= blog._id %>" class="btn btn-success">View</a>
      </div>
      <% }); %> <% } else { %>
      <p>No content available</p>
      <% } %>
      <!-- Add more cards dynamically using server-side rendering -->
    </div>
  </body>
</html>
